# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py,go,html,css}]
charset = utf-8

# tab indentation for Makefile
[Makefile]
indent_style = tab

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# 4 space indentation
[*.go]
indent_style = space
indent_size = 8

# 2 space indentation
[*.{html,js,css,json}]
indent_style = space
indent_size = 2
